{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "types": ["node"],
    "noUncheckedIndexedAccess": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
